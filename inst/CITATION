citHeader("To cite scan in publications use:")

citEntry(entry = "Misc",
  title        = "scan: Single-Case Data Analyses for Single and Multiple Baseline Designs",
  shorttitle   = "scan",
  publisher    = "CRAN",
  author       = personList(as.person("Jürgen Wilbert"), as.person("Timo Lüke")),
  year         = "2023",
  url          = "https://CRAN.R-project.org/package=scan",

  textVersion  =
  paste0("APA style:\n", 
    "Wilbert, J. & Lüke, T. (2023). ",
    "Scan: Single-Case Data Analyses for Single and Multiple Baseline Designs. ",
    "(0.56) [English]. CRAN. ",
    "https://CRAN.R-project.org/package=scan.")
)
